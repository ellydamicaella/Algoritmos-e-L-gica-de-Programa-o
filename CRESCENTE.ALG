Algoritmo "CRESCENTE"


Var
   x, y: inteiro

Inicio

   escreval(" escreva os numeros inteiros")
   leia(x)
   leia(y)


   enquanto x <> y faca
   
      se x > y entao
      escreval("Decrescente")
      senao
           escreval("Crescente")
      fimse
      escreval(" Escreva dois numeros inteiros")
      leia(x)
      leia(y)
   fimenquanto


   Fimalgoritmo





fimse 