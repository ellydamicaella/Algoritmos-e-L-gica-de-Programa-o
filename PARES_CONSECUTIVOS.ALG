Algoritmo "pares_consecutivos"


Var
   x,soma : inteiro

Inicio

   escreval("digite o valor de x:")
   leia(x)


     enquanto x <> 0 faca
          se x  % 2 <> 0 entao
             x <- x +1
          fimse

          soma <- 5 * x + 20
          
          escreval("a soma dos pares: ", soma)

          escreval("digite o valor de x:")
          leia(x)
fimenquanto
Fimalgoritmo


